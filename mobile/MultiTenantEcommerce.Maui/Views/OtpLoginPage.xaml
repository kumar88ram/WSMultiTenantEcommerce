<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:MultiTenantEcommerce.Maui.Converters"
             xmlns:viewModels="clr-namespace:MultiTenantEcommerce.Maui.ViewModels"
             x:Class="MultiTenantEcommerce.Maui.Views.OtpLoginPage"
             x:DataType="viewModels:OtpLoginViewModel"
             Title="Sign In">
    <ContentPage.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">
            <Label Text="Welcome Back" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" />
            <Label Text="Securely sign in with your verified number." Style="{StaticResource SubtleLabelStyle}" HorizontalOptions="Center" />

            <Entry Placeholder="Phone number" Keyboard="Telephone" Text="{Binding PhoneNumber}" />
            <Button Text="Request OTP"
                    Command="{Binding RequestOtpCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                    Style="{StaticResource PrimaryButtonStyle}" />

            <Grid ColumnDefinitions="*,auto" RowDefinitions="Auto">
                <Entry Placeholder="One-time passcode"
                       Grid.Column="0"
                       Text="{Binding OtpCode}"
                       Keyboard="Numeric"
                       MaxLength="6"
                       IsEnabled="{Binding IsOtpRequested}" />
                <Label Grid.Column="1" VerticalTextAlignment="Center" Text="{Binding SecondsRemaining, StringFormat='({0}s)'}" />
            </Grid>

            <Button Text="Verify"
                    Command="{Binding VerifyOtpCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                    Style="{StaticResource PrimaryButtonStyle}" />

            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
            <Label Text="{Binding StatusMessage}" TextColor="{Binding StatusColor}" HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:MultiTenantEcommerce.Maui.Converters"
             x:Class="MultiTenantEcommerce.Maui.Views.LoginPage">
    <ContentPage.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">
            <Label Text="Multi-tenant Login" FontSize="24" HorizontalOptions="Center" />
            <Entry Placeholder="Tenant" Text="{Binding Tenant}" />
            <Entry Placeholder="Username" Text="{Binding UserName}" />
            <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
            <Button Text="Sign In" Command="{Binding SignInCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}" />
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
            <Label TextColor="Red" Text="{Binding ErrorMessage}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MultiTenantEcommerce.Maui.Views.OrderHistoryPage"
             Title="Order History">
    <ContentPage.Resources>
        <DataTemplate x:Key="OrderTemplate">
            <VerticalStackLayout Padding="12" Spacing="4">
                <Label Text="{Binding OrderId, StringFormat='Order #{0}'}" FontAttributes="Bold" />
                <Label Text="{Binding OrderDate, StringFormat='Date: {0:MMMM d, yyyy}'}" />
                <Label Text="{Binding Total, StringFormat='Total: {0:C}'}" />
                <Label Text="{Binding Status, StringFormat='Status: {0}'}" />
            </VerticalStackLayout>
        </DataTemplate>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="*">
        <ActivityIndicator Grid.Row="0" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" HorizontalOptions="Center" />
        <Label Grid.Row="1" Text="{Binding ErrorMessage}" TextColor="Red" HorizontalOptions="Center" />
        <CollectionView Grid.Row="2" ItemsSource="{Binding Orders}" ItemTemplate="{StaticResource OrderTemplate}">
            <CollectionView.EmptyView>
                <Label Text="No orders found." HorizontalOptions="Center" VerticalOptions="Center" />
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>
